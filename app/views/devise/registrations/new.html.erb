<div class="main_">

  <div class="contents">

    <div class="registration">

      <div class="form">
      
        <%= form_with model: @user, url: user_registration_path, class: '', local: true do |f| %>
    
          <h3 class='form-header-text'>
            管理者情報登録
          </h3>
    
          <div class="form_name">
            <%=f.text_field :name, placeholder:"  管理者名" %>
          </div>

          <div class="form_email">
            <%= f.email_field :email, placeholder:"  メールアドレス", autofocus: true %>
          </div>

          <div class="form_pass">
            <%= f.password_field :password, placeholder:"  6文字以上の半角英数字" %>
          </div>

          <div class="form_pass">
            <%= f.password_field :password_confirmation,  placeholder:"  パスワード確認" %>
          </div>

          <div class="form_submit">  
            <%= f.submit "登録" ,class:"form_btn" %>
          </div>

        <% end %>

      </div>

    </div>

  </div>

</div>