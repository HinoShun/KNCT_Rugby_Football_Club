<h4>詳細画面</h4>
  <%= image_tag(@article.image) %>
  <%= @article.title %>
  <%= @article.content %>

  <% if user_signed_in? && current_user.id == @article.user_id %>
    <div class="">
      <%= link_to "編集する", "#" %>
      <%= link_to "削除する", "#" %>
    </div>
  <% end %>

  <%= render partial: "articles/comment", collection: @comments  %>

  <div class="comment-form">
    <%= form_with(model: [@article, @comment], local: true) do |f|%>
    <%= render 'shared/error_messages', model:@comment %>
     <div class="">
      <%= f.label :graduating_class, "卒業期" %><br />
      <%= f.text_field :graduating_class, id:"" %>
    </div>

    <div class="">
      <%= f.label :name, "お名前" %><br />
      <%= f.text_field :name, id:"" %>
    </div>

    <div class="">
      <%= f.label :message, "コメント内容" %><br />
      <%= f.text_area :message, id:"" %>
    </div>

    <div class="">
      <%= f.submit "コメントする" %>
    </div>
  <% end %>