<h1>記事投稿画面</h1>

<%= form_with model: @article, local: true do |f|%>
  <div class="">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, id:"" %>
  </div>

  <div class="">
    <%= f.label :content, "記事内容" %><br />
    <%= f.text_area :content, class: :form__text, id:"" %>
  </div>

  <div class="">
    <%= f.label :image, "記事写真" %><br />
    <%= f.file_field :image, id:"" %>
  </div>

  <div class="">
    <%= f.submit "投稿する", class: :form__btn  %>
  </div>
<% end %>